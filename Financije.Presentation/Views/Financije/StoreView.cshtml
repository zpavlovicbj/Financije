@model Financije.Presentation.Models.Financije.StoreViewModel;

<div class="container mt-2 border page-header" style="width: 500px;">
    <h4 class="bg-primary text-uppercase text-white p-2">Pregled primatelja / platitelja</h4>

    <form enctype="multipart/form-data" asp-controller="Financije" asp-action="CreateStore" method="post">
        <div class="row">
            <div class="text-danger  ml-2">
                @if (ViewBag.Greska != null)
                {
                    @ViewBag.Greska
                }
            </div>
        </div>
        <div class="row">
            <label asp-for="StoreName" class="control-label ml-2"></label>
        </div>
        <div class="row">
            <div class="input-group ml-2">
                <input asp-for="StoreName" class="form-control" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
                <div class="input-group-append">
                    <input type="submit" value="Dodaj" class="btn btn-primary" style="width:90px" />
                </div>
            </div>

        </div>
    </form>
    <hr class="mt-2 mb-2" />
    <table class="table table-sm table-striped table-bordered col-md-12">
        <thead>
            <tr>
                <th>Platitelj/Primatelj </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var store in Model.StoreList)
            {
                <tr class="mb-0" style="width: 85%">
                    <td hidden>@store.StoresId</td>
                    <td>@store.StoreName</td>
                    <td style="width: 15%">
                        <a asp-action="DeleteStore" asp-controller="Financije" asp-route-Id="@store.StoresId"
                           onclick="return confirm('Are you sure you want to delete?');"
                           class="btn btn-sm btn-danger">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div class="modal" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-uppercase text-white">
                <h4 class="modal-title">Pregled opisa plaćanja</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @*<partial name="PartialDetailsCertificate" />*@
            </div>
            <div class="modal-footer">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <form asp-controller="Certificate" asp-action="DownloadCertificate" method="post">
                                    <input type="text" id="CertId" name="CertId" hidden>
                                    <input type="submit" value="Preuzmi" class="btn btn-primary" style="width:90px" />
                                    <button type="button" class="btn btn-danger" data-dismiss="modal" style="width:90px">Odustani</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
