@model Financije.Presentation.Models.Financije.ArticlePreviewModel;

<div class="card mx-auto mt-2" style="width: 750px;">
    <div class="card-header bg-primary text-uppercase text-white">
        <h4>Pregled Artikala</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label hidden asp-for="ArticleId"></label>
                    <input hidden asp-for="ArticleId" class="form-control" id="articleId" />
                    <label asp-for="ArticleName"></label>
                    <input asp-for="ArticleName" class="form-control" id="articleName" />
                    <label id="errorMessage" class="text-danger"></label>
                    <span asp-validation-for="ArticleName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DescriptionName" class="control-label"></label>
                    <input list="descriptions" id="searchDescriptions" asp-for="DescriptionName" class="form-control" />
                    <datalist id="descriptions">
                        @foreach (var item in Model.DescriptionsList)
                        {
                            <option>@item.DescriptionName</option>
                        }
                    </datalist>
                    <span asp-validation-for="DescriptionName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <button type="button" id="btnSave" class="btn btn-primary btn-sm" style="width:90px;">Spremi</button>

                    <button type="button" id="btnClear" class="btn btn-warning btn-sm" style="width:90px;">Isprazni</button>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <table id="detailsDatatable" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>Artikl</th>
                        <th>Opis</th>
                        <th>Uredi</th>
                        <th>Briši</th>
                    </tr>
                </thead>
            </table>
            <a asp-action="Index" asp-controller="Financije" class="btn btn-danger btn-sm">Odustani</a>
        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnSave').click(function () {
                SaveData();
            });

            $('#btnClear').click(function () {
                ResetForm();
            });

            function SaveData() {
                var id = $('#articleId').val();
                var name = $('#articleName').val();
                var description = $('#searchDescriptions').val();

                if (id == "") {
                    id = 0;
                }
                
                if (name && name.trim()) {
                    var obj = { ArticleId: id, ArticleName: name, DescriptionName: description };

                    $.ajax({
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        url: "../api/FinancijeApi/AddOrEditArticle",
                        data: JSON.stringify(obj),
                        datatype: "json",
                        success: function (data) {
                            ResetForm();
                            oTable = $('#detailsDatatable').DataTable();
                            oTable.draw(false);
                        },
                        error: function (data) {
                            alert("Ovaj artikl već postoji!!");
                            $("#articleName").focus();
                        }
                    });
                }
                else {
                    $('#ErrorMessage').text("Unesite naziv!");
                    $("#articleId").val("");
                    $("#articleName").focus();
                }
            }

            $("#detailsDatatable").on("click", "a.view-details", function () {
                const id = $(this).data("id");

                $.ajax({
                    type: "GET",
                    url: "../api/FinancijeApi/GetArticleDetails",
                    data: { 'Id': id },
                    dataType: 'JSON',
                    success: function (response) {
                        $("#articleId").val(response.data.articleId);
                        $("#articleName").val(response.data.articleName);
                        $("#searchDescriptions").val(response.data.descriptionName);
                        $("#articleName").focus();
                    },
                    error: function () {
                        alert("Došlo je do greške!");
                    },
                });
            })

            $('#detailsDatatable').dataTable({
                "bAutoWidth": false,
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-4'i>>" +
                    "<'row'<'col-sm-8'l><'col-sm-4'p >> ",
                "pagingType": "scrolling",
                "serverSide": true,
                "filter": true,
                "pagingType": "full",
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "language": {
                    "emptyTable": "Nema podataka"
                },
                "oLanguage": {
                    "sProcessing": "Učitavam podatke...",
                    "sSearch": "Traži:",
                    "sInfo": "_START_ do _END_. Ukupno: _TOTAL_",
                    "sInfoEmpty": "0 od 0. Ukupno 0",
                    "sLengthMenu": "_MENU_ po stranici",
                    "oPaginate": {
                        "sFirst": "<<",
                        "sPrevious": "<",
                        "sNext": ">",
                        "sLast": ">>"
                    }
                },
                "ajax": {
                    "url": "../api/FinancijeApi/GetArticles/",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [
                    {
                        "targets": [0],
                        "width": "45%"
                    },
                    {
                        "targets": [1],
                        "width": "25%"
                    },
                    {
                        "targets": [2],
                        "width": "15%",
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [3],
                        "width": "15%",
                        "searchable": false,
                        "orderable": false
                    },
                ],
                "columns": [
                    { "data": "articleName", "name": "ArticleName", "autoWidth": false },

                    { "data": "descriptionName", "name": "DescriptionName", "autoWidth": false },
                    {
                        "data": "articleId", "width": "50px", className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' data-id='" + data + "'class='btn1 btn-info btn-sm view-details'>Uredi</a>";
                        }
                    },
                    {
                        "data": "articleId",  className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' class='btn1 btn-danger btn-sm' onclick='DeleteArticles(" + data + ")' >Briši</a>";
                        }
                    },
                ]
            });
        });

        function DeleteArticles(Id) {
            if (confirm("Da li stvarno želiš obrisati artikl?")) {
                var url = "../api/FinancijeApi/DeleteArticles?Id=" + Id;
                $.post(url, function (data) {
                    if (data == "Deleted") {
                        oTable = $('#detailsDatatable').DataTable();
                        oTable.draw(false);
                    }
                    else {
                        alert("Brisanje nije uspjelo!");
                    }
                });
            }
            else {
                return false;
            }
        }
        
        function ResetForm() {
            $("#articleId").val("");
            $("#articleName").val("");
            $("#searchDescriptions").val("");
        }
    </script>

    }
