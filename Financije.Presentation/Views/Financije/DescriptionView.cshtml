@model Financije.Presentation.Models.Financije.DescriptionViewModel;

<style>
    .dataTables_filter {
        float: left !important;
    }

    .datatables_paginate {
        float: right !important;
    }

    .dataTables_length {
        margin-top: 10px !important;
    }

    table {
        table-layout: fixed;
    }

        table td {
            word-wrap: break-word;
            max-width: 400px;
        }

    #example td {
        white-space: inherit;
    }

    .uniqueClassName {
        text-align: center;
    }

    .dataTable tr td {
        padding-top: 0px;
        padding-bottom: 3px;
    }

    .btn1 {
        padding-top: 0px;
        padding-bottom: 0px;
    }
</style>

<div class="card mx-auto mt-2" style="width: 500px;">
    <div class="card-header bg-primary text-uppercase text-white">
        <h4>Pregled Opisa</h4>
    </div>
    <div class="card-body">
        <div class="row">

            <button id="btnShowModal" class="btn btn-primary btn-sm mb-2">Dodaj opis</button>

            <table id="detailsDatatable" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>Opis</th>
                        <th>Uredi</th>
                        <th>Briši</th>
                    </tr>
                </thead>
            </table>
            <a asp-action="Index" asp-controller="Financije" class="btn btn-danger btn-sm">Odustani</a>
        </div>
    </div>
    
    <div class="modal" id="myModal" data-keyboard="false" data-backdrop="static" tabindex="-1">
        <div class="modal-dialog modal-lg" style="width:400px;">
            <div class="modal-content">
                <div class="modal-header bg-primary text-uppercase text-white">
                    <h4 class="modal-title">Dodaj/Uredi Opis</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label asp-for="DescriptionId"></label>
                            <input readonly asp-for="DescriptionId" class="form-control" id="DescriptionId"/>
                            <label asp-for="DescriptionName"></label>
                            <input asp-for="DescriptionName" class="form-control" id="DescriptionName" />
                            <label id="ErrorMessage" class="text-danger"></label>
                            <span asp-validation-for="DescriptionName" class="text-danger"></span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="submit" id="btnSave" class="btn btn-primary" style="width:90px;">Spremi</button>
                        <button type="button" class="btn btn-danger" id="btnHideModal">Odustani</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

    <script type="text/javascript">
        //Datatable
        $(document).ready(function () {
            $('#btnShowModal').click(function () {
                $('#myModal').modal("show");
                $("#DescriptionName").focus();
            });

            $('#btnHideModal').click(function () {
                $('#myModal').modal("hide");
                $("#DescriptionId").val("");
                $("#DescriptionName").val("");
            });

            $('#btnSave').click(function () {
                SaveData();
            });

            function SaveData() {
                var id = $('#DescriptionId').val();
                var name = $('#DescriptionName').val();
                if (id == "") {
                    id = 0;
                }
                if (name && name.trim()) {
                    var obj = { DescriptionId: id, DescriptionName: name };

                    $.ajax({
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        url: "../api/FinancijeApi/AddOrEditDescription",
                        data: JSON.stringify(obj),
                        datatype: "json",
                        success: function (data) {
                            $('#myModal').modal('hide');
                            $("#DescriptionId").val("");
                            $("#DescriptionName").val("");
                            oTable = $('#detailsDatatable').DataTable();
                            oTable.draw(false);
                        },
                        error: function (data) {
                            alert("error");
                        }
                    });
                }
                else {
                    $('#ErrorMessage').text("Unesite naziv!");
                    $("#DescriptionId").val("");
                    $("#DescriptionName").focus();
                }
            }
            /*Dodatne funkcije prikaza i skrivanja modalnog dialoga
             * $('#myModal').on('show.bs.modal', function () {
                alert('Modal dialog će biti prikazan.');
            });

            $('#myModal').on('shown.bs.modal', function () {
                alert('Modal dialog je prikazan.');
            });

            $('#myModal').on('hide.bs.modal', function () {
                alert('Modal dialog će biti sakriven.');
            });

            $('#myModal').on('hiden.bs.modal', function () {
                alert('Modal dialog je sakriven.');
            });*/

            $("#detailsDatatable").on("click", "a.view-details", function () {
                const id = $(this).data("id");

                $.ajax({
                    type: "GET",
                    url: "../api/FinancijeApi/GetDescriptionDetails",
                    data: { 'Id': id },
                    dataType: 'JSON',
                    success: function (response) {
                        $("#DescriptionId").val(response.data.descriptionId);
                        $("#DescriptionName").val(response.data.descriptionName);

                        $('#myModal').modal('show')
                        $("#DescriptionName").focus();
                    },
                    error: function () {
                        alert("Došlo je do greške!");
                    },
                });
            })

            $('#detailsDatatable').dataTable({
                "bAutoWidth": false,
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-4'i>>" +
                    "<'row'<'col-sm-8'l><'col-sm-4'p >> ",
                "pagingType": "scrolling",
                "serverSide": true,
                "filter": true,
                "pagingType": "full",
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "language": {
                    "emptyTable": "Nema podataka"
                },
                "oLanguage": {
                    "sProcessing": "Učitavam podatke...",
                    "sSearch": "Traži:",
                    "sInfo": "_START_ do _END_. Ukupno: _TOTAL_",
                    "sInfoEmpty": "0 od 0. Ukupno 0",
                    "sLengthMenu": "_MENU_ po stranici",
                    "oPaginate": {
                        "sFirst": "<<",
                        "sPrevious": "<",
                        "sNext": ">",
                        "sLast": ">>"
                    }
                },
                "ajax": {
                    "url": "../api/FinancijeApi/GetDescriptions/",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [
                    {
                        "targets": [0],
                        "width": "70%"
                    },
                    {
                        "targets": [1],
                        "width": "15%",
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [2],
                        "width": "15%",
                        "searchable": false,
                        "orderable": false
                    },
                ],
                "columns": [
                    { "data": "descriptionName", "name": "DescriptionName", "autoWidth": false },

                    {
                        "data": "descriptionId", "width": "50px", className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' data-id='" + data + "'class='btn1 btn-info btn-sm view-details'>Uredi</a>";
                        }
                    },
                    {
                        "data": "descriptionId", className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' class='btn1 btn-danger btn-sm' onclick='DeleteDescription(" + data + ")' >Briši</a>";
                        }
                    },
                ]
            });
        });

        function DeleteDescription(Id) {
            if (confirm("Da li stvarno želiš obrisati opis...?")) {
                var url = "../api/FinancijeApi/DeleteDescriptions?Id=" + Id;
                $.post(url, function (data) {
                    if (data == "Deleted") {
                        oTable = $('#detailsDatatable').DataTable();
                        oTable.draw(false);
                    }
                    else {
                        alert("Brisanje nije uspjelo!");
                    }
                });
            }
            else {
                return false;
            }
        }</script>


}
