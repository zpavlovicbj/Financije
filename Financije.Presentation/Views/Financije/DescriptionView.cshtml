@model Financije.Presentation.Models.Financije.DescriptionViewModel;

<style>
    .dataTables_filter {
        float: left !important;
    }

    .datatables_paginate {
        float: right !important;
    }

    .dataTables_length {
        margin-top: 10px !important;
    }

    table {
        table-layout: fixed;
    }

        table td {
            word-wrap: break-word;
            max-width: 400px;
        }

    #example td {
        white-space: inherit;
    }

    .uniqueClassName {
        text-align: center;
    }

    .dataTable tr td {
        padding-top: 0px;
        padding-bottom: 3px;
    }
    .btn {
        padding-top: 0px;
        padding-bottom: 0px;
    }

</style>

<div class="card mx-auto mt-2" style="width: 500px;">
    <div class="card-header bg-primary text-uppercase text-white">
        <h4>Pregled primatelja / platitelja</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">

            </div>

            <table id="detailsDatatable" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>Platitelj/Primatelj </th>
                        <th>Uredi</th>
                        <th>Briši</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal" id="myModal">
    <div class="modal-dialog modal-lg" style="width:400px;">
        <div class="modal-content">
            <div class="modal-header bg-primary text-uppercase text-white">
                <h4 class="modal-title">Dodaj/Uredi Opis</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form action="create" >
                        <div class="col-md-10">
                            <div class="form-group">
                                <label class="control-label">Opis</label>
                                <input asp-for="DescriptionName" class="form-control" id="DescriptionName" />
                                <span asp-validation-for="DescriptionName" class="text-danger"></span>

                                <input asp-for="DescriptionId" class="form-control" id="DescriptionId" />

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-save="modal" style="width:90px; height:35px;">Spremi</button>

                                @*<button type="button" onclick="saveDescription()" value="Spremi" class="btn btn-primary" style="width:90px; height:35px;" />*@
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <button type="button" class="btn btn-danger" data-dismiss="modal" style="width:90px; height:35px;">Odustani</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

    <script type="text/javascript">
    //Datatable
        $(document).ready(function () {
            $("#detailsDatatable").on("click", "a.view-details", function () {
                const id = $(this).data("id");

                $.ajax({
                    type: "GET",
                    url: "../api/FinancijeApi/GetDescriptionDetails",
                    data: { 'Id': id },
                    dataType: 'JSON',
                    success: function (response) {
                        $("#DescriptionId").val(response.data.descriptionId);
                        $("#DescriptionName").val(response.data.descriptionName);

                        $('#myModal').modal('show')
                    },
                    error: function () {
                        alert("Došlo je do greške!");
                    },
                });
            })

            $('#detailsDatatable').dataTable({
                "bAutoWidth": false,
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-4'i>>" + 
                    "<'row'<'col-sm-8'l><'col-sm-4'p >> ",
                "pagingType": "scrolling",
                "serverSide": true,
                "filter": true,
                "pagingType": "full",
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "language": {
                    "emptyTable": "Nema podataka"
                },
                "oLanguage": {
                    "sProcessing": "Učitavam podatke...",
                    "sSearch": "Traži:",
                    "sInfo": "_START_ do _END_. Ukupno: _TOTAL_",
                    "sInfoEmpty": "0 od 0. Ukupno 0",
                    "sLengthMenu": "_MENU_ po stranici",
                    "oPaginate": {
                        "sFirst": "<<",
                        "sPrevious": "<",
                        "sNext": ">",
                        "sLast": ">>"
                    }
                },
                "ajax": {
                    "url": "../api/FinancijeApi/GetDescriptions/",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [
                    {
                        "targets": [0],
                        "width": "70%"
                    },
                    {
                        "targets": [1],
                        "width": "15%",
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [2],
                        "width": "15%",
                        "searchable": false,
                        "orderable": false
                    },
                ],
                "columns": [
                    { "data": "descriptionName", "name": "DescriptionName", "autoWidth": false },

                    {
                        "data": "descriptionId", "width": "50px", className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' data-id='" + data + "'class='btn btn-info btn-sm view-details'>Uredi</a>";
                        }
                    },
                    {
                        "data": "descriptionId", className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' class='btn btn-danger btn-sm' onclick='DeleteDescription(" + data + ")' >Briši</a>";
                        }
                    },
                ]
            });
        });

        function DeleteDescription(Id) {
            if (confirm("Da li stvarno želiš obrisati opis...?")) {
                var url = "../api/FinancijeApi/DeleteDescriptions?Id=" + Id;
                $.post(url, function (data) {
                    if (data == "Deleted") {
                        oTable = $('#detailsDatatable').DataTable();
                        oTable.draw(false);
                    }
                    else {
                        alert("Brisanje nije uspjelo!");
                    }
                });
            }
            else {
                return false;
            }
        }</script>

