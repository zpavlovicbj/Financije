@model Financije.Presentation.Models.Financije.StorePreviewModel;

<div class="card mx-auto mt-2" style="width: 700px;">
    <div class="card-header bg-primary text-uppercase text-white">
        <h4>Pregled Trgovina</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input hidden asp-for="StoreId" class="form-control" id="storeId" />
                    <label asp-for="StoreName"></label>
                    <input asp-for="StoreName" class="form-control" id="storeName" />
                    <label id="errorMessage" class="text-danger"></label>
                    <span asp-validation-for="StoreName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StoreNameAccount"></label>
                    <input asp-for="StoreNameAccount" class="form-control" id="storeNameAccount" />
                    <label id="errorMessageA" class="text-danger"></label>
                    <span asp-validation-for="StoreNameAccount" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <button type="button" id="btnSave" class="btn btn-primary btn-sm" style="width:90px;">Spremi</button>
                    <button type="button" id="btnClear" class="btn btn-warning btn-sm" style="width:90px;">Isprazni</button>
                </div>
            </div>
        </div>
        <hr />

        <div class="row">
            <table id="detailsDatatable" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>Trgovina</th>
                        <th>Trgovina s računa</th>
                        <th>Uredi</th>
                        <th>Briši</th>
                    </tr>
                </thead>
            </table>
            <a asp-action="Index" asp-controller="Financije" class="btn btn-danger btn-sm">Odustani</a>
        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#btnSave').click(function () {
                SaveData();
            });

            $('#btnClear').click(function () {
                ResetForm();
            });

            function SaveData() {
                var id = $('#storeId').val();
                var name = $('#storeName').val();
                var nameAccount = $('#storeNameAccount').val();
                if (id == "") {
                    id = 0;
                }
                
                if (name && name.trim()) {
                    var obj = { StoreId: id, StoreName: name, StoreNameAccount: nameAccount };

                    $.ajax({
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        url: "../api/FinancijeApi/AddOrEditStore",
                        data: JSON.stringify(obj),
                        datatype: "json",
                        success: function (data) {
                            //$('#myModal').modal('hide');
                            $("#storeId").val("");
                            $("#storeName").val("");
                            $('#storeNameAccount').val("");
                            oTable = $('#detailsDatatable').DataTable();
                            oTable.draw(false);
                        },
                        error: function (data) {
                            alert("error");
                        }
                    });
                }
                else {
                    $('#ErrorMessage').text("Unesite naziv!");
                    $("#storeName").val("");
                    $('#storeNameAccount').val("");
                    $("#storeName").focus();
                }
            }

            $("#detailsDatatable").on("click", "a.view-details", function () {
                const id = $(this).data("id");

                $.ajax({
                    type: "GET",
                    url: "../api/FinancijeApi/GetStoreDetails",
                    data: { 'Id': id },
                    dataType: 'JSON',
                    success: function (response) {
                        $("#storeId").val(response.data.storeId);
                        $("#storeName").val(response.data.storeName);
                        $('#storeNameAccount').val(response.data.storeNameAccount);
                        $("#storeName").focus();
                    },
                    error: function () {
                        alert("Došlo je do greške!");
                    },
                });
            })

            $('#detailsDatatable').dataTable({
                "bAutoWidth": false,
                "dom": "<'row'<'col-sm-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-4'i>>" +
                    "<'row'<'col-sm-8'l><'col-sm-4'p >> ",
                "pagingType": "scrolling",
                "serverSide": true,
                "filter": true,
                "pagingType": "full",
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "language": {
                    "emptyTable": "Nema podataka"
                },
                "oLanguage": {
                    "sProcessing": "Učitavam podatke...",
                    "sSearch": "Traži:",
                    "sInfo": "_START_ do _END_. Ukupno: _TOTAL_",
                    "sInfoEmpty": "0 od 0. Ukupno 0",
                    "sLengthMenu": "_MENU_ po stranici",
                    "oPaginate": {
                        "sFirst": "<<",
                        "sPrevious": "<",
                        "sNext": ">",
                        "sLast": ">>"
                    }
                },
                "ajax": {
                    "url": "../api/FinancijeApi/GetStores/",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [
                    {
                        "targets": [0],
                        "width": "30%"
                    },
                    {
                        "targets": [1],
                        "width": "46%"
                    },
                    {
                        "targets": [2],
                        "width": "12%",
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [3],
                        "width": "12%",
                        "searchable": false,
                        "orderable": false
                    },
                ],
                "columns": [
                    { "data": "storeName", "name": "StoreName", "autoWidth": false },
                    { "data": "storeNameAccount", "name": "StoreNameAccount", "autoWidth": false },
                    {
                        "data": "storeId", "width": "50px", className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' data-id='" + data + "'class='btn1 btn-info btn-sm view-details'>Uredi</a>";
                        }
                    },
                    {
                        "data": "storeId", className: "uniqueClassName", "render": function (data) {
                            return "<a href='#' class='btn1 btn-danger btn-sm' onclick='DeleteStore(" + data + ")' >Briši</a>";
                        }
                    },
                ]
            });
        });

        function DeleteStore(Id) {
            if (confirm("Da li stvarno želiš obrisati opis...?")) {
                var url = "../api/FinancijeApi/DeleteStores?Id=" + Id;
                $.post(url, function (data) {
                    if (data == "Deleted") {
                        oTable = $('#detailsDatatable').DataTable();
                        oTable.draw(false);
                    }
                    else {
                        alert("Brisanje nije uspjelo!");
                    }
                });
            }
            else {
                return false;
            }
        }

        function ResetForm() {
            $("#storeId").val("");
            $("#storeName").val("");
            $('#storeNameAccount').val("");
        }
    </script>


}
